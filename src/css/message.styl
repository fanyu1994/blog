.message
  margin: 20px 20% 0
  padding: 20px
  border-radius: 5px
  background-image: url("../../public/message/beijing.jpg")
  min-height: 600px
  position relative
  .message_top
    .message_top_title
      margin: 30px 0
      text-align: center
      height: 60px
      line-height: 30px
      font-size: 25px
    .message_top_middle
      margin 0 auto
      position relative  
      width 600px
      text-align: center
      #message
        resize: none
        box-sizing: border-box
        padding: 10px 10px
        letter-spacing: 1px
        line-height: 1.5
        font-size: 14px
        width: 100%
        height: 150px
        border-radius: 5px
      .el-button 
        width: 180px
        position absolute
        right: 0
        top 170px  
      .message_top_login
        box-sizing: border-box
        border: 1px solid #a9a9a9
        border-bottom: none
        border-radius: 5px 5px 0 0
        background-color: rgba(241,195,60,1)
        position absolute
        left 0
        top -40px
        width: 100%
        height: 40px
        font-size: 14px
        user-select none
        .message_top_login_left
          position absolute
          top: 0
          left 20px 
          line-height: 40px         
          cursor: pointer
          &:hover
            color: #12c31fc4
        .message_top_login_right
          height: 40px
          width: 60px
          line-height: 40px
          position absolute
          right: 20px  
          top 0 
          cursor: pointer
          &:hover
            color: red 
  .message_login
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background-color: rgba(0,0,0,0.5)
    z-index 1
    .login
      width: 600px
      height 300px
      background-color: white
      position absolute
      left 50%
      top 50%
      transform: translate(-50%,-50%)
      border-radius: 5px
      .login_title
        width: 580px
        height: 40px
        font-size: 15px
        padding-left:20px
        line-height: 40px
        border-radius: 5px 5px 0 0 
        border-bottom: 1px solid #d2d2d2
      .login_X
        width 20px
        position absolute
        right 20px
        top 10px
        transition: all 0.6
        &:hover
          cursor pointer
          transform: scale(1.2)
      .account_name,.password_name
        border: 1px solid #c7c4c4
        height: 27px
        border-radius: 3px
        position absolute
        left 65px 
        padding: 0 5px
        line-height: 27px
        color: #777777
        background-color: #e4e4e4
        font-size: 14px
        .account_span
          width: 300px
          position absolute
          left 10px
          top 30px
      .account_name  
        top 71px
      .password_name   
        top 130px
      .account,.password
        margin: 30px auto 0 160px
        width: 380px  
        height: 27px
        border-radius: 3px
        border: 1px solid #c7c4c4
        padding: 0 10px
        &::placeholder
          color: #e1e2e2
      .duihao,.cuohao
        width: 23px
        position absolute  
        left : 460px
        top 2px
      .login_footer
        padding-left: 410px
        padding-top: 30px 
  .message_bottom
    margin: 0 auto
    margin-top: 70px
    width: 600px
    border-top: 1px solid #929292
    .message_bottom_item
      padding: 20px 0
      min-height: 200px
      border-bottom: 1px solid #929292
      position relative
      font-size: 12px 
      .item_name
        position absolute
        top 0
        bottom: 0
        padding: 0 10px 0
        width: 20%
        font-size: 14px 
        color: #2d64b3
        word-wrap: break-word
        word-break: normal
        text-align: center
        border-right: 1px solid #929292
        .item_bai
          margin: 60px auto 10px
          background-color: #2d64b3
          border-radius: 10px
          width: 90%
          height: 100px
          position relative
          overflow: hidden
          .item_img
            position absolute
            top 17px 
          .one  
            left 50%
            transform: translateX(-50%)
            width: 40px
            height: 35px
            border-radius: 50%
            box-shadow: 0 0 5px white
            background-image:radial-gradient(#ffffff, #becbd4, #f4faff) 
          .two,.three
            background-image: linear-gradient(145deg,black,black,black,black,black,black,white,white,white,white) 
            width: 6px
            height: 5px
            border-radius: 50%
            left 38%
            top 40px
            transform: rotate(45deg)
          .three
            left 52%
            transform: rotate(-45deg)
            background-image: linear-gradient(225deg,black,black,black,black,black,black,white,white,white,white) 
          .four
            height: 1px
            width: 10px
            left 43.2%
            top 42.5px
            background-color: black
          .five,.six,.seven
            width: 1.5px
            height: 2px
            left 40%
            top 47px
            border-radius: 50%
            background-image: radial-gradient(#becbd4,white)
          .six
            top 52px
          .seven
            left 53.5% 
            top 45px
          .eight
            width: 80px
            height: 100px
            top 32px
            left 50%
            transform: translateX(-50%)
            background-image: radial-gradient(white,#becbd4)
            border-radius: 50% 
            .name
              display: block
              margin-top: 30px
              font-size: 14px
              color: black  
          .nine,.ten
            width: 80px
            height: 130px
            border-radius: 50%
            background-image: radial-gradient(white,#becbd4)
            top: 45px 
            left -10%
            transform: rotate(10deg)  
          .ten
            left 25%
      .item_content
        display inline-block
        width: 70%
        min-height: 160px
        padding: 10px 20px 10px 150px
        font-size: 16px
        line-height: 1.5
        word-wrap: break-word
      .item_footer
        position relative
        height: 30px
        color #616060
        .item_id,.item_remove,.item_time,.item_answer
          position absolute
          bottom: 0
        .item_id
          right: 165px
        .item_remove
          right: 210px
          cursor: pointer
        .item_time
          right: 40px 
        .item_answer
          right: 5px
          user-select: none
          cursor: pointer
          color #2d64b3 
    .item_answer_main
      min-height: 80px
      padding: 10px
      background-color: #c3ba4a 
      margin: 10px 0 0 150px
      position relative 
      border-radius: 5px
      .answer_top
        border-bottom: 10px solid #c3ba4a
        border-left: 10px solid transparent
        border-right: 10px solid transparent
        position absolute
        top -10px
        right: 10px
      .answer_middle
        padding:5px
        .answer_as
          height: 50px
          position relative
          margin: 5px
          span:nth-of-type(1)
            color: #0f55bb
          span:nth-of-type(2)
            .to_name
              color:#0f55bb 
          span:nth-of-type(3),span:nth-of-type(4)
            position absolute
            bottom: 2px
            right: 10px
          span:nth-of-type(3)
            right: 45px
          span:nth-of-type(4)
            color: #5d5d5d 
            cursor: pointer 
      .answer_bottom
        padding: 10px
        height: 70px
        position relative
        #answer_text 
          border: 1px solid #d6dffa
          resize:none 
        .answer_more
          height 30px
          line-height: 30px
          .answer_more_click
            color: #2d64b3
            cursor: pointer
        button
          height: 25px
          border-radius: 5px
          color: white
          background-color: #2d64b3
          position absolute
          right 20px
          top 60px
    .pagination
      margin-top: 20px
      span 
        display: inline-block
        margin: 0 5px
        border-radius: 5px
        background-color: #dedede
        width: 30px
        height: 30px
        line-height: 30px
        text-align: center
        cursor: pointer
        user-select: none
      .active
        background-color: #007bc3 

  






    

      

              

