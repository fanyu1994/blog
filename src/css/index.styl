.index
  background-image: url("../../public/whitebg.jpg")
  .index_top_top
    width: 100%
    height 10px
    background-image: linear-gradient(to right, 
      #4cd964, #5ac8fa, #007aff, #34aadc, #5856d6, #ff2d55)
  .index_top_bottom
    background-color: #1c2327
    div
      text-align center
      line-height: 60px
      font-size: 20px
      height 60px      
      color: white
      a
        color: white
        text-decoration: none
        &:hover
          color: #1974a9
          cursor pointer
          font-size: 25px  
    .index_top_bottom_one
      text-align left 
      padding-left: 25px
      font-size: 35px
      &:hover
        color: white
        font-size: 35px
  .index_bottom
    height 255px
    background-color: #73777a
    border-top: 10px solid #5ac8fa
    padding: 20px 0
    .el-col-3
      position relative
      height: 200px
      .el-image
        width: 128px
        border-radius 10px
        position absolute
        left 50%
        top 40%
        transform: translate(-50%, -50%)
      span 
        font-size: 14px
        color: #cac9c9
        position absolute
        left 50%
        top 80%
        transform: translate(-50%, -50%)
    .el-col-14
      span 
        display inline-block
        color: #a2a2a2
        margin: 5px

