.first
  margin 0
  padding: 0 15%
  box-sizing: border-box
  .el-col
    height: 300px
    margin: 15px 0
    .item
      border-radius: 5px
    .el-image
      border-radius: 5px
      width: 670px
      height: 300px
    .top1,.top2
      border-radius: 5px
      overflow: hidden
      height: 145px
      position relative
      .top1_span
        position absolute
        left 50%
        top 50%
        transform: translate(-50%,-50%)
        font-size: 14px
        color: white
        z-index 1
      .el-image      
        transition all 1s
        height: 145px
        width: 350px
        &:hover
          cursor: pointer
          transform: scale(1.2)
    .top1
      margin-bottom: 10px
  .top_end
    .top_end_all
      width: 300px
      height 300px
      background-image: url("../../public/first/top3.jpg")    
      border-radius: 5px   
      color #dadada
      position relative
      div
        font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
        position absolute
        left 10px
        font-size: 13px
        padding-left: 30px
        color #dadada
      .top_end_all_one
        top 10px
        color #969696
        font-size: 25px
        padding-left: 10px
      .top_end_all_two
        top 60px  
      .top_end_all_three
        top 100px
      .top_end_all_four
        top 140px 
      .top_end_all_five     
        top 180px
      .top_end_all_six
        top 220px 
        .el-button
          width: 50px
          height 50px
          position relative
          border none
          background-color: #04121f;
          box-shadow: 0 1px 2px white
          .el-image
            width: 35px
            height 35px
            position absolute
            left -45%
            top 12%
            transition: all 0.6s
            :hover
              transform: scale(0.8) 
          .myqq
            width 150px
            height: 150px 
            position absolute
            left -150px
            top -150px
  .two
    .two_left,.two_right
      background-color: #f5f5f5
      border-radius: 5px  
      padding: 20px 
      height: 245px
    .two_left
      .item
        position relative
        padding: 10px
        font-size: 14px
        .item_num
          background-color: #716e6e
          width 25px
          height 25px
          color: white
          text-align: center
          line-height: 25px
          position absolute
          left 10px
          top: 5px 
        .item_title 
          padding-left: 40px
          font-weight: 400
      .active
        position relative
        background-color: #e8e8e8
        padding: 10px 10px 0
        font-size: 14px
        .item_num
          background-color: black
          width 25px
          height 25px
          color: white
          text-align: center
          line-height: 25px
          position absolute
          left 10px
          top: 5px 
        .item_title 
          padding-left: 40px
          font-weight: 600
        .item_p
          height: 40px
          width: 100% 
          overflow: hidden
          white-space: nowrap
          text-overflow: ellipsis
    .two_right 
      padding: 0
      background-color: transparent 
      .two_right_all
        width: 300px
        height 285px
        background-color: #f5f5f5
        border-radius: 5px   
        font-size: 12px
        position relative 
        .two_right_top
          border-bottom 1px solid #cccccc 
          font-size: 19px
          padding: 10px 0
          margin: 0 20px
        .two_right_item
          margin: 20px
          padding: 10px 20px
          width:80%
          border-radius: 5px
          background-color: #d8d8d8
          text-overflow: ellipsis
          overflow hidden
          white-space: nowrap
          &:hover
            box-shadow: 0 0 5px #bdbdbd






        

 
           